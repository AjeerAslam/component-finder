    "progress": "^1.1.8",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "sinon": "^1.17.5",
    "nyc": "^7.1.0",
    "ava": "^0.15.2",
    "nock": "^8.0.0",
    "minimatch": "^3.0.3",
